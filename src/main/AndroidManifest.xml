<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shrinidhikr.moneysaver">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/money2_ic"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/money2_ic"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".OpenAct"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".Plans"
            android:label="Plans" />
        <activity
            android:name=".Expenses"
            android:label="Expenses" />
        <activity
            android:name=".BucketList"
            android:label="Bucket List" />
        <activity
            android:name=".Savings"
            android:label="Balance" />
        <activity
            android:name=".Sign_up"
            android:label="Sign Up" />
        <activity
            android:name=".GetToKnow"
            android:label="Add Money" />

        <receiver android:name=".AlarmReceiver">
            <intent-filter>
                <action android:name="shashu.umesh.action.DISPLAY_NOTIFICATION" />
            </intent-filter>
        </receiver>

        <activity android:name=".DateWisePlan" />
        <activity android:name=".login_activity"
            android:label="Login"/>


    </application>

</manifest>